<Window x:Class="Final_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="815" Width="795">
    
    <Grid>
        <Image x:Name="BackgroundImage" Opacity="0.5" Stretch="UniformToFill" />

        <StackPanel Margin="0,0,0,200" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="GAME MENU" FontSize="72" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" />
            <Button Content="Start Game" FontSize="32" FontWeight="Normal" Foreground="White" Background="Transparent" BorderBrush="White" BorderThickness="2" Margin="0,10,0,10" Click="StartGame_Click" />
            <Button Content="Options" FontSize="32" FontWeight="Normal" Foreground="White" Background="Transparent" BorderBrush="White" BorderThickness="2" Margin="0,10,0,10" Click="Options_Click" />
            <Button Content="Exit Game" FontSize="32" FontWeight="Normal" Foreground="White" Background="Transparent" BorderBrush="White" BorderThickness="2" Margin="0,10,0,10" Click="ExitGame_Click" />
        </StackPanel>

        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
